}

static float GetDimentionValue(w, data)
     BarGraphWidget w;
     double         data;
{
  register ValuePart    * val = & w->value;
  float                   dim;
  float                   range;

  if (w->barGraph.orient == XcVert)
    range = (float)(w->barGraph.bar.height);
  else
    range = (float)(w->barGraph.bar.width);
  
/****** Figure dim value */
  if ((val->datatype == XcLval) || (val->datatype == XcHval)) 
  {
    if (data > (double)(val->upper_bound.lval))
      return (float)-1.0;

    dim = Correlate(((float)(data) - (float)(val->lower_bound.lval)),
		    ((float)(val->upper_bound.lval) - (float)(val->lower_bound.lval)), 
		    range);
  } 
  else if (val->datatype == XcFval) 
  {
    if (data > (double)(val->upper_bound.fval))
      return (float)-1.0;
    
    dim = Correlate(((float)(data) - val->lower_bound.fval),
		    (val->upper_bound.fval - val->lower_bound.fval), range);
  }
  return dim;
}
